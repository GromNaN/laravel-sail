mongodb:
    image: mongodb/mongodb-community-server:6.0-ubi8
    environment:
        - MONGO_INITDB_ROOT_USERNAME=user
        - MONGO_INITDB_ROOT_PASSWORD=laravel
    volumes:
        - type: bind
        source: ./data
        target: /data/db
    ports:
        - '${FORWARD_MONGODB_PORT:-27017}:27017'
    networks:
        - sail
    healthcheck:
        test: ["CMD", "redis-cli", "ping"]
        retries: 3
        timeout: 5s
